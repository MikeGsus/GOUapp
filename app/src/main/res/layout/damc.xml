<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.renovaciontabasco.gouapp.univ.universidad"
    android:background="#0098DA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="82dp"
                    android:layout_height="113dp"
                    android:src="@mipmap/logo_comalcalco"
                    />

                <TextView
                    android:id="@+id/section_label"
                    android:layout_width="278dp"
                    android:layout_height="match_parent"
                    android:text="DIVISIÓN \nACADÉMICA \nMULTIDISCIPLINARIA \nDE COMALCALCO"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:orientation="vertical"
                android:gravity="center">


                <TextView
                    android:id="@+id/lugar"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text='Lugar: Aula F8'
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hora"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text='Horario: Miércoles 12:00 pm'
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ecargado"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text='Encargada: Marcy Briceño'
                    android:textColor="#fff"
                    android:textSize="18sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
