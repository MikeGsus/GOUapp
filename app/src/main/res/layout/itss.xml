<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.renovaciontabasco.gouapp.univ.universidad"
    android:background="#0098DA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="82dp"
                    android:layout_height="113dp"
                    app:srcCompat="@mipmap/logo_itss" />

                <TextView
                    android:id="@+id/section_label"
                    android:layout_width="278dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="INSTITUTO TECNOLÓGICO SUPERIOR \nDE LA \nREGIÓN SIERRA"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/ecargado"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:text='Encargado: Alec Eduardo Hernández Cornelio'
                    android:textColor="#fff"
                    android:textSize="18sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
